---

<div
  class="absolute hidden sm:hidden cursor-pointer backdrop-blur-sm top-0 h-full w-full bg-slate-600/10 z-0"
  id="navigation-drawer-backdrop"
>
</div>
<nav
  class="absolute hidden sm:hidden flex-col h-full w-9/12 top-0 right-0 justify-center items-center bg-slate-900 z-2 drop-shadow-lg"
  id="navigation-drawer"
>
  <ul class="text-center font-mono">
    <li class="mb-4 hover:text-sky-400 cursor-pointer">About</li>
    <li class="mb-4 hover:text-sky-400 cursor-pointer">Experience</li>
    <li class="mb-4 hover:text-sky-400 cursor-pointer">Work</li>
    <li class="mb-12 hover:text-sky-400 cursor-pointer">Contract</li>
  </ul>

  <button
    class="w-max h-min border border-sky-400 px-8 py-2 hover:border-sky-600 hover:border-2 text-sky-400 hover:bg-sky-400/10 rounded"
  >
    Resume</button
  >
</nav>

<script>
  const drawerBackdrop = document.querySelector("#navigation-drawer-backdrop");
  const drawer = document.querySelector("#navigation-drawer");
  const menuOpenIcon = document.querySelector("#menu-open-icon");
  const menuCloseIcon = document.querySelector("#menu-close-icon");
  const body = document.querySelector("body");

  document.addEventListener("click", (e) => {
    if (
      drawer &&
      body &&
      menuOpenIcon &&
      menuCloseIcon &&
      drawerBackdrop &&
      e.target
    ) {
      const isOutsideBoundary = drawerBackdrop.contains(e.target as Node);

      if (isOutsideBoundary) {
        drawerBackdrop.classList.add("hidden");
        drawerBackdrop.classList.remove("flex");

        drawer.classList.add("hidden");
        drawer.classList.remove("flex");

        menuCloseIcon.classList.remove("block");
        menuCloseIcon.classList.add("hidden");

        menuOpenIcon.classList.remove("hidden");
        menuOpenIcon.classList.add("block");

        body.classList.remove("sm:overflow-hidden");
      }
    }
  });
</script>
