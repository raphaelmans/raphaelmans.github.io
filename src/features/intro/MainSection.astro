---
import BaseSectionLayout from "layouts/BaseSectionLayout.astro";
---

<BaseSectionLayout>
  <article class="w-full h-full flex flex-col justify-center" id="main">
    <h1
      class="text-sky-400 font-mono transition opacity-0 translate-y-4 ease-in duration-200 delay-1000"
    >
      Hi, my name is
    </h1>
    <h2
      class="text-5xl font-bold mt-4 text-white transition opacity-0 translate-y-4 ease-in duration-200 delay-[1200ms]"
    >
      Raphael Mansueto
    </h2>
    <h3
      class="text-slate-500 font-bold text-4xl mt-4 transition opacity-0 translate-y-4 ease-in duration-200 delay-[1300ms]"
    >
      I build quality websites
    </h3>
    <p
      class="mt-6 transition opacity-0 translate-y-4 ease-in duration-200 delay-[1400ms]"
    >
      I'm a lifelong learner individual<br /> whose passion is building state of
      the art,<br />
      easy to use, and high performance websites.
    </p>
    <a
      class="w-fit py-2 px-6 border border-sky-400 rounded mt-12 hover:border-sky-600 hover:border-2 text-sky-400 hover:bg-sky-400/10 cursor-pointer transition opacity-0 translate-y-4 ease-in duration-300 delay-[1400ms]"
      href="#about-me"
    >
      Know me more
    </a>
  </article>
</BaseSectionLayout>

<script>
  import type { TransitionalElement } from "types/transitional-element";
  import { onElementsLoadTransition } from "utils/transitions";
  const elements = document.querySelector("#main")?.children;

  document.addEventListener("DOMContentLoaded", () => {
    if (elements) {
      onTransition([...elements]);
    }
  });

  function onTransition(elements: Element[]) {
    const tes: TransitionalElement[] = elements.map((te) => {
      return {
        element: te,
        transitions: [
          {
            property: "opacity",
            from: 0,
            to: 100,
          },
          {
            property: "translate-y",
            from: 4,
            to: 0,
          },
        ],
      };
    });
    onElementsLoadTransition(tes);
  }
</script>
